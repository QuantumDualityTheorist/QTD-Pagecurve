# QTD_PageCurve.ipynb
# Minimal Lindblad toy model reproducing unitary Page curve
import numpy as np
import matplotlib.pyplot as plt
from qutip import *

# ----------------------
# Parameters
# ----------------------
N = 4096          # number of modes
eta = 0.8
p = 2
S0 = np.log(N)    # initial coarse-grained entropy
t_max = 10
n_steps = 500

# ----------------------
# Initialize density matrix (vacuum)
# ----------------------
rho = fock_dm(N, 0)

# ----------------------
# Define jump operator D
# Example: self-adjoint involution (swap-like)
# ----------------------
# This is a minimal toy version. Replace with exact early/late swap operator if needed.
D = qdiags([1, -1] + [0]*(N-2), 0, N, N)  

# ----------------------
# Time evolution setup
# ----------------------
t_list = np.linspace(0, t_max, n_steps)
dt = t_list[1] - t_list[0]
alpha = 0.0
S_list = []

# ----------------------
# Evolution loop (Euler integration)
# ----------------------
for t in t_list:
    # Rate function
    S_rho = - (rho * rho.logm()).tr().real   # von Neumann entropy
    kappa = eta * S_rho * (1 - alpha**p) / S0
    
    # Lindblad update
    drho = kappa * (D * rho * D - rho)
    rho = rho + drho * dt
    
    # Update alpha (memory depth)
    alpha += kappa * dt
    alpha = min(alpha, 1.0)
    
    # Store entropy
    S_list.append(S_rho)

# ----------------------
# Plot Page curve
# ----------------------
plt.figure(figsize=(6,4))
plt.plot(t_list, S_list, color='black', lw=2, label='Toy model')
plt.xlabel('Time')
plt.ylabel('von Neumann entropy $S(t)$')
plt.title('Unitary Page Curve (Toy Model)')
plt.grid(True)
plt.legend()
plt.tight_layout()
plt.savefig('page_curve_final.pdf')
plt.show()
